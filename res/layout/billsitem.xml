<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/no_data"
        android:id="@+id/text_time_show"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/image_type_show"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_time_show"
        android:padding="10dp"
        android:contentDescription="@string/desc_ions_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/no_data"
        android:id="@+id/text_fee_show"
        android:layout_marginStart="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_remarks_show"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/text_remarks_show"
        android:layout_alignBottom="@+id/image_type_show"
        android:layout_toEndOf="@+id/image_type_show"
        android:layout_marginStart="34dp"
        android:gravity="center"/>
</RelativeLayout>